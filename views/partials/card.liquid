<main class="fold">
  <button aria-label="see more" id="toggle"></button>
  {% render './profile.liquid', name: person.name %}
  <section>
    <article class="content">
      <h2>About me</h2>
      <div>
        <span>I love</span>
        {% render './slider.liquid'
          , hobbies: person.custom.hobbies %}
      </div>
      <div class="wrapper">
        <p>
          {{ user.bio }}
          Voor deze opleiding studeerde ik Software development aan het <br/>
          <a href="https://www.glr.nl/">Grafisch Lyceum Rotterdam</a>
          Bekijk anders ook nog even mijn
          <a href={{ user.website }}>portfolio</a>!
        </p>
        <ul>
          <li class="link">
            <a class="icon" href="https://github.com/MarsGotBars">
              {% render './icons/Git.liquid' %}
            </a>
          </li>
          <li class="link">
            <a class="icon" href="https://www.linkedin.com/in/marcin-magdziak-664847223/">
              {% render './icons/linkedIn.liquid' %}
            </a>
          </li>
        </ul>
      </div>
    </article>
  </section>
</main>